<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="match_parent"
	android:layout_width="match_parent"
	android:orientation="vertical">

	<GridLayout
		android:layout_height="wrap_content"
		android:layout_width="match_parent"
		android:columnCount="7">

		<Button
			android:layout_height="wrap_content"
			style="?android:attr/buttonStyleSmall"
			android:text="C#"
			android:layout_width="wrap_content"
			android:id="@+id/cr"/>

		<Button
			android:layout_height="wrap_content"
			style="?android:attr/buttonStyleSmall"
			android:text="D#"
			android:layout_width="wrap_content"
			android:id="@+id/dr"/>

		<Button
			android:layout_height="wrap_content"
			style="?android:attr/buttonStyleSmall"
			android:text="E#"
			android:layout_width="wrap_content"
			android:visibility="invisible"/>

		<Button
			android:layout_height="wrap_content"
			style="?android:attr/buttonStyleSmall"
			android:text="F#"
			android:layout_width="wrap_content"
			android:id="@+id/fr"/>

		<Button
			android:layout_height="wrap_content"
			style="?android:attr/buttonStyleSmall"
			android:text="G#"
			android:layout_width="wrap_content"
			android:id="@+id/gr"/>

		<Button
			android:layout_height="wrap_content"
			style="?android:attr/buttonStyleSmall"
			android:text="A#"
			android:layout_width="wrap_content"
			android:id="@+id/ar"/>

		<Button
			android:layout_height="wrap_content"
			style="?android:attr/buttonStyleSmall"
			android:text="B#"
			android:layout_width="wrap_content"
			android:visibility="invisible"/>

		<Button
			android:layout_height="wrap_content"
			style="?android:attr/buttonStyleSmall"
			android:text="C"
			android:layout_width="wrap_content"
			android:id="@+id/c"/>

		<Button
			android:layout_height="wrap_content"
			style="?android:attr/buttonStyleSmall"
			android:text="D"
			android:layout_width="wrap_content"
			android:id="@+id/d"/>

		<Button
			android:layout_height="wrap_content"
			style="?android:attr/buttonStyleSmall"
			android:text="E"
			android:layout_width="wrap_content"
			android:id="@+id/e"/>

		<Button
			android:layout_height="wrap_content"
			style="?android:attr/buttonStyleSmall"
			android:text="F"
			android:layout_width="wrap_content"
			android:id="@+id/f"/>

		<Button
			android:layout_height="wrap_content"
			style="?android:attr/buttonStyleSmall"
			android:text="G"
			android:layout_width="wrap_content"
			android:id="@+id/g"/>

		<Button
			android:layout_height="wrap_content"
			style="?android:attr/buttonStyleSmall"
			android:text="A"
			android:layout_width="wrap_content"
			android:id="@+id/a"/>

		<Button
			android:layout_height="wrap_content"
			style="?android:attr/buttonStyleSmall"
			android:text="B"
			android:layout_width="wrap_content"
			android:id="@+id/b"/>

	</GridLayout>

	<GridLayout
		android:layout_height="wrap_content"
		android:layout_width="match_parent"
		rowCount="1"
		columnCount="1"
		android:columnCount="2">

		<TextView
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:typeface="monospace"
			android:id="@+id/srccode"/>

		<TextView
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:id="@+id/explanation"/>

	</GridLayout>

</LinearLayout>

